<div class="modal fade" id="add-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Tambah data jadwal</h4>
      </div>
      <div class="modal-body">
        <form role="form" action="/admin/jadwal" method="POST">
          <div class="box-body">
            <!-- DatePicker Tanggal Lahir -->
            <div class="form-group">
              <label for="tgl_berangkat">Tanggal berangkat</label>
              <div class="input-group date">
                <div class="input-group-addon">
                  <i class="fa fa-calendar"></i>
                </div>
                <input type="date" required name="tanggal_berangkat" class="form-control pull-right"
                  id="inputDatepickerTglLahir" />
              </div>
            </div>

            <div class="form-group">
              <label for="lokasi_awal">Lokasi awal</label>
              <input type="text" class="form-control" id="origin" name="origin" placeholder="Masukan lokasi awal"
                required>
            </div>
            <div class="form-group">
              <label for="tujuan">Tujuan</label>
              <input type="text" class="form-control" id="tujuan" name="destination" placeholder="Masukan tujuan"
                required>
            </div>
            <div class="form-group">
              <label for="jam_keberangkatan">Jam keberangkatan</label>
              <input type="text" class="form-control" id="jam_keberangkatan" name="jam_keberangkatan"
                placeholder="Masukan jam keberangkatan" required>
            </div>

            <div class="form-group">
              <select required name="MobilId" class="form-control">
                <option value="">--- Pilih Barang ---</option>
                <% for(let i = 0; i < car.length; i++) { %>
                <option value=<%= car[i].id %>><%= car[i].jenis_mobil %></option>
                <% } %>
              </select>
            </div>

            <div class="form-group">
              <label for="jumlah_kursi">Jumlah kursi</label>
              <input type="number" class="form-control" id="jumlah_kursi" name="jumlah_kursi"
                placeholder="Masukan jumlah kursi" required>
            </div>
            <!-- 
            <div class="form-group">
              <label for="kursi_kosong">Kursi kosong</label>
              <input type="text" class="form-control" id="kursi_kosong" name="kursi_kosong"
                placeholder="Masukan kursi kosong" required>
            </div>

            <div class="form-group">
              <label for="kursi_terisi">Kursi terisi</label>
              <input type="text" class="form-control" id="kursi_terisi" name="kursi_terisi"
                placeholder="Masukan kursi terisi" required>
            </div> -->

            <div class="form-group">
              <label for="harga_perkursi">Harga perkursi</label>
              <input type="number" class="form-control" id="harga_perkursi" name="harga_perkursi"
                placeholder="Masukan harga perkursi" required>
            </div>


            <!-- select -->

          </div>
          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Simpan</button>
          </div>
        </form>
      </div>

    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>