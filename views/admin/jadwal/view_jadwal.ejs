<%- include ../../partials/admin_layout/header.ejs %>
<%- include ../../partials/admin_layout/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

  <!-- Main content -->
  <section class="content">
    <div class="row">

      <div class="col-xs-12">
        <div class="box">
          <!-- /.box-header -->
          <div class="box-header">
            <h3 class="box-title">Data Jadwal</h3>
          </div>

          <div class="box-body">
            <div style="margin: 0 20px 20px 20px;">
              <!-- <button class="btn btn-success">Tambah</button> -->
              <button type="button" class="btn btn-success" data-toggle="modal" data-target="#add-modal">
                <span class="glyphicon glyphicon-plus"></span>
                Tambah
              </button>
            </div>
            <table id="kelas" class="table table-bordered table-striped">
              <thead>
                <!-- masukin aja table -->
                <tr>
                  <th>No</th>
                  <th>Tanggal berangkat</th>
                  <th>Lokasi Awal</th>
                  <th>Tujuan</th>
                  <th>Jam Keberangkatan</th>
                  <th>Mobil</th>
                  <th>Jumlah Kursi</th>
                  <th>Kursi kosong</th>
                  <th>Kursi terisi</th>
                  <th>Harga perkursi</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>

                <% for (let i = 0; i < jadwal.length; i++ ) { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= jadwal[i].tanggal_berangkat %></td>
                  <td><%= jadwal[i].origin %></td>
                  <td><%= jadwal[i].destination %></td>
                  <td><%= jadwal[i].jam_berangkat %></td>
                  <td><%= jadwal[i].Car.jenis_mobil %></td>
                  <td><%= jadwal[i].jumlah_kursi %></td>
                  <td><%= jadwal[i].kursi_kosong %></td>
                  <td><%= jadwal[i].kursi_terisi %></td>
                  <td><%= jadwal[i].harga_kursi %></td>
                  <td>
                    <a href="javascript:void(0);" type="button" class="btn btn-success btn-sm edit">
                      <span class="glyphicon glyphicon-pencil"></span>
                      Edit
                    </a>
                    <button class="btn btn-danger btn-sm" onclick="update_status(`<%= jadwal[i].id %>`)"
                      data-id="<%= jadwal[i].id %>">
                      <span class="glyphicon glyphicon-trash"></span>
                      Hapus
                    </button>
                  </td>
                </tr>
                <% } %>

              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>

<!-- include  add modal -->


<!-- include  edit modal -->


<%- include ../../partials/admin_layout/footer.ejs %>
<!-- page script -->
<script>
  $(document).ready(function () {
    // datatable
    $('#kelas').DataTable()

    // redirect halaman kelas
    function halamankelas() {
      window.location.replace(window.location.protocol + "//" + window.location.host + '/admin/kelas')
    }

    // function simpan
    $('#simpan_kelas').on('submit', function (event) {
      event.preventDefault();
      $.ajax({
        url: "/admin/kelas/create",
        method: "POST",
        data: $(this).serialize(),
        success: function () {
          swal({
            title: "Success",
            text: "Success Tambah Data Kelas",
            icon: "success",
            button: "Oke",
          }).then(sukses => {
            halamankelas();
          });
        },
      })
    })

    //showing data to e edit modal 
    $('#kelas').on('click', '.edit', function () {
      const id = $(this).data('id');
      const nama = $(this).data('nama');
      const tingkat = $(this).data('tingkat');


      $('#edit-modal').modal('show');
      $('.id').val(id);
      $('.nama').val(nama);
      $('.tingkat').val(tingkat);
    });
  })

  // Delete guru 
  function delete_kelas(id) {
    let idKelas = id;
    swal({
      title: "Yakin Ingin Menghapus Data Kelas ini?",
      text: "Data yang dihapus, tidak bisa kembali lagi.",
      icon: "warning",
      buttons: true,
      dangerMode: true
    }).then(willDelete => {
      if (willDelete) {
        swal({
          title: "Success",
          text: "Success Delete Data Kelas",
          icon: "success",
          button: "Oke",
        }).then(suksesDelete => {
          window.location.assign(`/admin/kelas/delete/${idKelas}`);
        });
      }
    });
  }


</script>